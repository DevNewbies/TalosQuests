<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded" >
	<GridLayout rows="*" columns="*">
		<StackLayout visibility="{{ isItemVisible ? 'visible' : 'collapsed' }}">
			<TextField hint="Name" text="{{ username }}"  autocorrect="false" autocapitalizationType="none"/>
			<TextField hint="Email Address" text="{{ email }}" autocorrect="false" autocapitalizationType="none" keyboardType="email"/>
			<TextField hint="Password" text="{{ password }}" secure="true"  autocorrect="false" autocapitalizationType="none"/>
			<Button text="CREATE ACCOUNT" tap="register" />
		</StackLayout>
		<ActivityIndicator busy="{{ isLoading }}" row="1" col="1" rowSpan="1" colSpan="1"/>
	</GridLayout>
</Page>