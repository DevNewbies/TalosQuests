<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded">
	<GridLayout rows="*" columns="*" >
		<StackLayout orientation="vertical" visibility="{{ isItemVisible ? 'visible' : 'collapsed' }}">
			<TextField hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none"
			id="email" text="{{email}}"/>
			<TextField hint="Password" secure="true" text="{{password}}"/>
			<Button text="Sign in" class="link" tap="signIn" />
			<Button text="Sign up" class="link" tap="register"/>
		</StackLayout>
	<ActivityIndicator busy="{{ isLoading }}" row="1" col="1" rowSpan="1" colSpan="1"/>
	</GridLayout>
</Page>