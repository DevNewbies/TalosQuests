<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:maps="nativescript-google-maps-sdk" navigatingTo="onNavigatingTo">
    <TabView selectedIndexChanged="changeTab">
        <TabView.items>
            <TabViewItem title="Map">
                <TabViewItem.view>
                    <StackLayout>
                        <Button text="Find Me" class="findMeButton" ontap="findMe"/>
                        <GridLayout >
                            <maps:mapView latitude="{{ mapLatitude }}" longitude="{{ mapLongitude }}" zoom="{{ mapZoom }}" mapReady="mapIsReady"/>
                        </GridLayout>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Quest">
                <TabViewItem.view>
                    <StackLayout>
                        <StackLayout>
                            <Label text="{{ QuestTitle }}"/>
                            <Label text="{{ QuestExp }}"/>
                            <Label text="{{ QuestQuestion }}"/>
                        </StackLayout>
                        <GridLayout columns="auto,auto">
                            <StackLayout col="0">
                                <Button text="{{ QuestChoiceA }}" ontap="submitChoice"/>
                                <Button text="{{ QuestChoiceC }}" ontap="submitChoice"/>
                            </StackLayout>
                            <StackLayout col="1">
                                <Button text="{{ QuestChoiceB }}" ontap="submitChoice"/>
                                <Button text="{{ QuestChoiceD }}" ontap="submitChoice"/>
                            </StackLayout>
                        </GridLayout>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Settings">
                <TabViewItem.view>
                    <StackLayout>

                        <StackLayout class="SwitchTheme" orientation="horizontal">
                            <Label text="Sound Effects"/>
                            <Switch checked="{{ SoundEffectsEnabled }}"/>
                        </StackLayout>

                        <StackLayout class="SwitchTheme" orientation="horizontal">
                            <Label text="Music"/>
                            <Switch checked="{{ MusicEnabled }}"/>
                        </StackLayout>

                        <StackLayout class="SwitchTheme" orientation="horizontal">
                            <Button text="Stop Game" ontap="stopGame"/>
                        </StackLayout>

                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>

</Page>
